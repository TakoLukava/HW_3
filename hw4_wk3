P = int(input('Enter percent: ')) 
if 0<P<25:
  x = 1000                            #balance at the beginning
  m=0                                 # monthes 

  while x < 1100:
    monthly= x*(P/100)
    m+=1
    x= x+ monthly*m

  print('Balance:', x,'\n','Monthes:', m)

else:
  print('Not a valid percent')
